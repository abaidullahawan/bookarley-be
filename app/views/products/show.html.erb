$('.tab-buttons').on('click', function () {
    var data_id = $(this).data('id');
    $('.tab-buttons').removeClass('active');
    $(this).addClass('active');

    $('#pricing, #details, #locations, #header-section').fadeOut('fast', function () {
      // Hide all sections before showing the selected one
      switch (data_id) {
        case 'pricing':
          $('#pricing').fadeIn('fast');
          break;
        case 'locations':
          $('#locations').fadeIn('fast');
          break;
        default:
          // Default case shows all sections
          $('#pricing, #details, #locations, #header-section').fadeIn('fast');
      }
    });
  });
