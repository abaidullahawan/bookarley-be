<div id="carouselExample" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% @active_sliders.each_with_index do |item, index| %>
      <div class="carousel-item <%= 'active' if index == 0 %>">
        <% if item.active_image.attached? %>
          <%= image_tag rails_blob_path(item.active_image), class: "carousel-image", alt: "image" %>
        <% end %>
        <div class="carousel-caption">
          <% if item.url.present? %>
            <a href="<%= item.url %>" class="btn btn-primary px-4">Book Now</a>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<div class="container">
  <div class="d-flex justify-content-center align-items-center mt-5"> <button class="btn btn-dark sub-ctg-button">POPULAR CATEGORIES</button> </div>
  <div class="row mt-2 g-4">
    <% @product_sub_categories.each do |product_sub_category|%>
      <div class="col-lg-3 col-md-4 col-sm-6">
        <div class="card cat-card p-1">
          <div class="d-flex justify-content-between align-items-center p-2">
            <div class="flex-column lh-1 imagename"> <span><%= product_sub_category.title %></span> </div>
            <div>
              <% if product_sub_category.active_image.persisted? %>
                <%= image_tag(product_sub_category.active_image, width: 100, height: 100) %>
              <% end %>  
            </div>
          </div>
        </div>
      </div>
    <% end %>  
  </div>
</div>

<section class="bg-white py-3">
  <div class="container my-5">
    <% @product_categories.each do |category| %>
      <% if category.products.present? %>
        <div class="row mb-5">
          <div class="col-md-6">
            <h2 class="sm-text-3xl text-xl font-weight-bold text-dark leading-none">
              <% if category.active_image.persisted? %>
                  <%= image_tag(category.active_image, width: 40, height: 40, alt:"image") %>
              <% end %>
              <%= category.title %>
            </h2>
          </div>
          <div class="col-md-6"><button class="btn btn-primary" style="float: right">View More</button></div>
        </div>
        <div class="row">
          <% category.products.each do |product| %>
            <div class="col-lg-3 col-md-6 col-sm-6">
              <div class="card my-2 shadow-0 p-2">
                <a href="#" class="img-wrap">
                  <div class="mask" style="height: 50px;">
                    <div class="d-flex justify-content-start align-items-start h-100 m-2">
                      <h6><span class="badge bg-success pt-2"><%= product.status %></span></h6>
                    </div>
                  </div>
                  <% if product.active_image.persisted? %>
                    <%= image_tag(product.active_image, class:"card-img-top", style:"aspect-ratio: 1 / 1")%>
                  <% end %>
                </a>
                <div class="card-body p-0 pt-3">
                  <a href="#!" class="btn btn-light border px-2 pt-2 float-end icon-hover"><i class="fas fa-heart fa-lg px-1 text-secondary"></i></a>
                  <h5 class="card-title">Rs. <%= product.price %></h5>
                  <p class="card-text mb-0"><%= product.title %></p>
                  <p class="text-muted">
                    <%= product.description %>
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</section>


