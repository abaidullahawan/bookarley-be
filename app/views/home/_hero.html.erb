<style>
  /* Style for the carousel control icons */
.carousel-control-icon {
  width: 40px;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.carousel-control-icon i {
  font-size: 1.5rem;
}


/* Style for the icon color */
.carousel-control-icon i {
  color: white; /* Change the icon color as needed */
}

:root {
  --visible-slides: 5;
}


.slider {
  position: relative;
  height: 200px;
  overflow: hidden;
}

.vendor-slider {
  height: 237px !important;
}


.slider-ul {
  position: relative;
  list-style: none;
  margin: 0;
  padding-left: 70px;
  padding-right: 70px;
  width: 100%;
  height: 100%;
  display: flex;
  transform: translateX(calc(-100% / var(--visible-slides)));
}

.vendor-ul {
  position: relative;
  list-style: none;
  margin: 0;
  padding-left: 198px;
  padding-right: 42px;
  width: 100%;
  height: 100%;
  display: flex;
  transform: translateX(calc(-100% / var(--visible-slides)));
}

.slider-li {
  position: relative;
  width: calc(92% / var(--visible-slides));
  height: 100%;
  color: black;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  background: white;
}

.vendor-li {
  margin-left: 5%;
  position: relative;
  width: calc(188% / var(--visible-slides));
  height: 100%;
  color: black;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  background: white;
}

.slider-nav .prev,
.slider-nav .next {
  position: absolute;
  background: #1e396b;
  height: 32px;
  width: 32px;
  top: 52%;
  transform: translateY(-50%);
  border-radius: 50%;
  cursor: pointer;
}

.slider-nav .prev {
  left: 0px;
}

.slider-nav .next {
  right: 0px;
}

.transition {
  transition: transform 0.5s ease;
}

.left {
  transform: translateX(-100%);
}

.right {
  transform: translateX(100%);
}

/*--------------------------------------------------------------
# Values
--------------------------------------------------------------*/
.values .box {
  padding: 30px;
  box-shadow: 0px 0 32px rgb(1 41 112 / 8%);
  text-align: center;
  transition: 0.3s;
  height: 100%;
  border: 0.5px solid #e2e1e1;
  border-radius: 10px;
}


.values .box h3 {
  font-size: 22px;
  color: #012970;
  font-weight: 700;
  margin-bottom: 18px;
  margin-top: 35px;
}

.values .box:hover {
  box-shadow: 0px 0 30px rgba(1, 41, 112, 0.08);
}


.section-header {
  text-align: center;
  padding-bottom: -2px;
}

.section-header h2 {
  font-size: 13px;
  letter-spacing: 1px;
  font-weight: 700;
  margin: 0;
  color: #f29f37;
  text-transform: uppercase;
}

.section-header p {
  margin: 10px 0 0 0;
  padding: 0;
  font-size: 24px;
  line-height: 42px;
  font-weight: 700;
  color: #012970;
}

@media (max-width: 768px) {
  .section-header p {
    font-size: 28px;
    line-height: 32px;
  }
}

.section-title {
  text-align: center;
  padding-bottom: 30px;
}

.section-title h2 {
  font-size: 28px;
  font-weight: bold;
  text-transform: uppercase;
  margin-bottom: 20px;
  padding-bottom: 20px;
  position: relative;
  color: #37517e;
}

.section-title h2::before {
  content: "";
  position: absolute;
  display: block;
  width: 120px;
  height: 1px;
  background: #ddd;
  bottom: 1px;
  left: calc(50% - 60px);
}

.section-title h2::after {
  content: "";
  position: absolute;
  display: block;
  width: 40px;
  height: 3px;
  background: #1e396b;
  bottom: 0;
  left: calc(50% - 20px);
}

.section-title p {
  margin-bottom: 0;
  font-size: 1.4em;
  color: #635b5b;
}
.vendors-container{
  margin-top: 10%;
}

.feature-text{
  font-size: 1.3em;
  width: 13%;
  padding: 9px;
  background: #1e396b;
  color: #f29f37;
  font-weight: 400;
  border-radius: 32px;
  margin-bottom: 24px;
  text-align: center;
}

/*--------------------------------------------------------------
# About Us
--------------------------------------------------------------*/

#about{
