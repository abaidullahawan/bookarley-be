<script>
  $(document).ready(function () {
    function resetPos(slider) {
      slider.find('ul li').removeClass('transition');
      slider.find('ul li').removeClass('left right');
    }

    function prev(slider) {
      var sliderLength = slider.find('ul li').length;
      slider.find('ul li').each(function () {
        var curPos = parseInt($(this).css('order'));
        if (curPos < sliderLength) {
          $(this).css('order', curPos + 1);
        } else {
          curPos = 1;
          $(this).css('order', curPos);
        }
      });
    }

    function next(slider) {
      var sliderLength = slider.find('ul li').length;
      slider.find('ul li').each(function () {
        var curPos = parseInt($(this).css('order'));
        if (curPos > 1) {
          $(this).css('order', curPos - 1);
        } else {
          curPos = sliderLength;
          $(this).css('order', curPos);
        }
      });
    }

    $('.prev').on('click', function () {
      var slider = $(this).closest('.slider');
      slider.find('ul li').addClass('transition right');
      setTimeout(function () {
        prev(slider);
        resetPos(slider);
      }, 500);
    });

    $('.next').on('click', function () {
      var slider = $(this).closest('.slider');
      slider.find('ul li').addClass('transition left');
      setTimeout(function () {
        next(slider);
        resetPos(slider);
      }, 500);
    });

    function init(slider) {
      slider.find('ul li').each(function (index) {
        $(this).css('order', index + 1);
      });
    }

    $('.slider').each(function () {
      init($(this));
    });
  });
</script>