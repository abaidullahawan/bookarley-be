<div class="container-fluid" style="padding: 40px;">
  <div class="card shadow-sm">
    <div class="card-header py-3">
      <h4 class="mb-0">Edit Blog Post</h4>
    </div>
    <div class="card-body py-5">
      <%= form_with(model: @blog_post, url: blog_post_path(@blog_post), local: true, multipart: true, html: {class: 'needs-validation', novalidate: true}) do |form| %>
        <div class="mb-5">
          <%= form.label :title, class: 'form-label h5' %>
          <%= form.text_field :title, class: 'form-control', required: true %>
        </div>
        <div class="mb-5">
          <%= form.label :description, class: 'form-label h5' %>
          <%= form.text_field :description, class: 'form-control', required: true %>
        </div>
        <div class="mb-5">
          <%= form.label :url, "URL", class: 'form-label h5' %>
          <%= form.text_field :url, class: 'form-control', required: true %>
        </div>
        <div class="mb-5">
          <%= form.label :image, "Thumbnail", class: 'form-label h5' %>
          <%= form.file_field :image, class: 'form-control', required: true %>
        </div>

        <div class="d-flex gap-2" style="justify-content: right;">
          <div class="d-flex">
            <div>
              <%= link_to blog_posts_path, class: 'btn btn-secondary', style:"width: 100px; margin-right: 10px;" do %>
                Cancel
              <% end %>
            </div>
            <div>
              <%= form.submit 'Update', class: 'btn btn-warning', style:"width: 100px;" %>
            </div>
          </div>  
        </div>
      <% end %>
    </div>  
  </div>
</div>
