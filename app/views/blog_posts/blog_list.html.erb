<style>
  table tr th, td{ 
    text-align: center;
  }

  table tr th{ 
    font-size: 1.3em;
  }

  table tr td{ 
    font-size: 1.1em;
  }


</style>
<div class="card shadow" style="margin-left: 30px; margin-right: 30px; margin-top: 120px; margin-bottom: 15%;">
  <div class="card-header py-4 pl-4">
    <h3>All Blog Posts</h3>
  </div>
  <div class="p-4">
    <div>
      <%= link_to new_blog_post_path, class:"btn btn-lg btn-success mt-3" do %>
        <i class="fa fa-plus" style="margin-right: 4px;"></i>Create
      <% end %>
    </div>
    <table class="table mt-3">
      <thead class="table-primary">
        <tr>
          <th class="py-3" scope="col">ID</th>
          <th class="py-3" scope="col">Thumbnail</th>
          <th class="py-3" scope="col">Title</th>
          <th class="py-3" scope="col">URL</th>
          <th class="py-3" scope="col">Created at</th>
          <th class="py-3" scope="col">Updated at</th>
          <th class="py-3" scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @blog_posts.each do |blog_post| %>
          <tr>
            <th scope="row"><%= blog_post.id %></th>
            <td>
              <% if blog_post.image.present? %>
                <%= image_tag(blog_post.image, width: 50, height: 25, style:"border-radius: 5px;") %>
              <% end %>          
            </td>
            <td><%= blog_post.title %></td>
            <td><%= blog_post.url %></td>
            <td><%= blog_post.created_at.strftime('%d %B, %Y') %></td>
            <td><%= blog_post.updated_at.strftime('%d %B, %Y') %></td>
            <td>
              <%= link_to edit_blog_post_path(blog_post), class:"btn btn-primary", style:"margin-right: 3px;" do %>
                Edit
              <% end %>
              <%= link_to "Delete", blog_post_path(blog_post), method: :delete, data: { confirm: 'Are you sure you want to delete this blog post?' }, class: 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>  
      </tbody>
    </table>
  </div>
</div>