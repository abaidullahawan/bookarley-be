<style>
.card-registration .select-input.form-control[readonly]:not([disabled]) {
font-size: 1rem;
line-height: 2.15;
padding-left: .75em;
padding-right: .75em;
}
.card-registration .select-arrow {
top: 13px;
}
</style>


<section class="h-100">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card card-registration my-4">
          <div class="row g-0">
            <div class="col-xl-6 d-none d-xl-block">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img4.webp"
                alt="Sample photo" class="img-fluid"
                style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
            </div>
            <div class="col-xl-6">
              <div class="card-body p-md-5 text-black">
                <h3 class="mb-5 text-uppercase">Seller Registration Form</h3>
                  <%# <%= render 'shared/error_messages', target: resource %>
                  <%# form  %>
                <% if @user %>
                <%= form_for @user, url: user_path(@user), method: :put do |f| %>
                            <div class="row">
                                <div class="col-md-12 mb-4"> 
                                    <div class="form-outline">
                                        <%= f.label :full_name, "Full Name", class:"form-label" %>
                                        <%= f.text_field :full_name, placeholder: 'Enter Full Name',  class:"form-control form-control-lg" %>
                                    </div>
                                </div>
                                
                                <div class="col-lg-12 mb-4">
                                    <div class="form-outline">
                                        <%= f.label :email, "Email", class:"form-label" %>
                                        <%= f.email_field :email, placeholder: 'example@gmail.com',  class:"form-control form-control-lg" %>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                               <div class="col-md-12 mb-4">
                                   <div class="form-outline">
                                        <%= f.label :date_of_birth, "Date of Birth", class: "form-label" %>
                                        <%= f.date_field :date_of_birth, class: "form-control form-control-lg" %>
                                    </div>
                                </div>

                                 <div class="col-md-12 mb-2">
                                       <div class="form-outline">
                                            <%= f.label :gender, "Gender", class: "form-label" %><br>
                                            <%= f.radio_button :gender, "male" %> <%= f.label :gender_male, "Male" %>
                                            <%= f.radio_button :gender, "female" %> <%= f.label :gender_female, "Female" %>
                                        </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 mb-4">
                                    <div class="form-outline">
                                        <%= f.label :contact_information, "Phone Number", class: "form-label" %>
                                        <%= f.text_field :contact_information, placeholder: '+92 322 123 4567', class: "form-control form-control-lg" %>
                                    </div>
                                </div>
                                <div class="col-md-12 mb-4">
                                    <div class="form-outline">
                                        <%= f.label :location, "Location", class: "form-label" %>
                                        <%= f.select :location, options_for_select(["Karachi", "Lahore", "Islamabad", "Rawalpindi", "Faisalabad"]), {}, class: "form-control form-control-lg" %>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 mb-4">
                                    <div class="form-outline">
                                    <%= f.label :profile_picture, "Profile Picture", class: "form-label" %>
                                    <%= f.file_field :profile_picture, class: "form-control form-control-lg" %>
                                    </div>
                                </div>
                                <div class="col-md-12 mb-4">
                                    <div class="form-outline">
                                    <%= f.label :bio, "Bio", class: "form-label" %>
                                    <%= f.text_area :bio, placeholder: 'Enter your bio', class: "form-control form-control-lg" %>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-start pt-3">
                                <button type="button" class="btn btn-light btn-lg"> <%= f.submit %></button>
                            </div>
                    <% end %>
                    <% else %>
                    <!-- Handle the case when @user is nil or empty -->
                    <% end %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</section>
