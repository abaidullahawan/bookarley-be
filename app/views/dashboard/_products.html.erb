<% flash.each do |type, message| %>
  <div class="alert alert-<%= type == :success ? 'daner' : 'success' %> alert-dismissible fade show" role="alert">
    <%= message %>
    <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
<h3><b>Products</b></h3>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#subCategories">
  Create
</button>


<div class="modal fade" id="subCategories" tabindex="-1" role="dialog" aria-labelledby="subCategoriesLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="subCategoriesLabel">New Product</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(model: @product, url: products_path, id: "productForm", method: :post) do |form| %>
          <div class="modal-body">
            <div class="form-group">
              <%= form.label :title, class: "control-label" %>
              <%= form.text_field :title, class: "form-control", placeholder: "Sub Category Title", required: true %>
            </div>
            <div class="form-group">
              <%= form.label :description, class: "control-label" %>
              <%= form.text_field :description, class: "form-control", placeholder: "Description" %>
            </div>  
            <div class="form-group">
              <%= form.label :status, class: "control-label" %>
              <div class="dropdown">
                <%= form.select :status, { "active" => "active", "passive" => "passive", "deleted" => "deleted" }, { include_blank: false, selected: "active" }, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= form.label :product_category, class: "control-label" %>
              <%= form.collection_select :product_category_id, ProductCategory.all, :id, :title, { include_blank: 'Select a Product Category' }, class: "form-control", required: true %>
            </div>
            <div class="form-group">
              <%= form.label :product_sub_category, class: "control-label" %>
              <%= form.collection_select :product_sub_category, ProductSubCategory.all, :id, :title, { include_blank: 'Select a Parent Category' }, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :image, class: "control-label" %>
              <%= form.file_field :active_image, class: "form-control-file" %>
            </div>  
            <%= form.hidden_field :id %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%= form.submit "Save", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="mt-3">
  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table">
          <thead class="bg-dark text-light">
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Image</th>
              <th scope="col">Title</th>
              <th scope="col">Status</th>
              <th scope="col">Description</th>
              <th scope="col">Created at</th>
              <th scope="col">Updated at</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @all_product_sub_categories&.each do |product_sub_category| %>
              <tr>
                <td><%= product_sub_category.id %></td>
                <td>
                  <% if product_sub_category.active_image.persisted? %>
                      <%= image_tag(product_sub_category.active_image, class:"ctg-image-main", alt:"image") %>
                  <% end %>
                </td>
                <td><%= product_sub_category.title %></td>
                <td><%= product_sub_category.status %></td>
                <td><%= product_sub_category.description %></td>
                <td><%= product_sub_category.created_at.strftime("%d/%b/%y at %I:%M %p") %></td>
                <td><%= product_sub_category.updated_at.strftime("%d/%b/%y at %I:%M %p") %></td>
                <td>
                  <div class="d-flex justify-content-between">
                    <button class="btn btn-danger btn-sm" onclick="confirmDeleteProduct('<%= product_sub_category.id %>')">Delete</button>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script>
  function confirmDeleteProduct(productId) {
    const confirmation = window.confirm("Do you want to delete this product sub-category?");
    if (confirmation) {
      const csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute("content");
      fetch(`/product_sub_categories/${productId}`, {
        method: 'DELETE',
        headers: {
          "Content-Type": "application/json",
          "X-CSRF-Token": csrfToken,
        }
      })
        .then(response => response.json())
        .catch(error => {
          console.error("Error occurred while fetching data:", error);
        });
    }
  }
</script>
