<style>
  .field-font{
    font-size: 12px;
  }


</style>
<div class="container-fluid" style="padding: 40px;">
  <div class="card shadow-sm">
    <div class="card-header py-3">
      <h4 class="mb-0">New Slider</h4>
    </div>
    <div class="card-body py-5">
      <%= form_with(model: @slider, url: slider_path(@slider), local: true, multipart: true, html: {class: 'needs-validation', novalidate: true}) do |form| %>
        <div class="mb-5">
          <%= form.label :title, class: 'form-label h5' %>
          <%= form.text_field :title, class: 'form-control field-font', required: true %>
        </div>
        <div class="mb-5">
          <%= form.label :priority, class: 'form-label h5' %>
          <%= form.number_field :priority, class: 'form-control field-font', required: true %>
        </div>
        <div class="mb-5">
          <%= form.label :url, "URL", class: 'form-label h5' %>
          <%= form.text_field :url, class: 'form-control field-font', required: true %>
        </div>
        <div class="mb-5">
          <%= form.label :image, "Banner", class: 'form-label h5' %>
          <%= form.file_field :image, class: 'form-control field-font', required: true %>
        </div>
        <div class="d-flex gap-2" style="justify-content: right;">
          <div class="d-flex">
            <div>
              <%= link_to sliders_path, class: 'btn btn-secondary', style:"width: 100px; margin-right: 10px;" do %>
                Cancel
              <% end %>
            </div>
            <div>
              <%= form.submit 'Save', class: 'btn btn-primary', style:"width: 100px;" %>
            </div>
          </div>  
        </div>
      <% end %>
    </div>  
  </div>
</div>
