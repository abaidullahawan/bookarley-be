<style>
  @import url("https://fonts.googleapis.com/css2?family=Audiowide&display=swap");
  .invitation-background{
    width: 100%;
    height: 35vh;
    background: url(<%= asset_url 'invitation_card_back.png' %>);
    background-size: cover;
    background-repeat: no-repeat;
  }

  .invite-card{
    width: 85%;
  }

  .bg-image{
    height: 45vh;
  }
  .bg-image img{
    width: 100%;
    height: 100%;
  }

  .invite-container{
    padding-top: 25px;
    padding-bottom: 50px;
    padding-left: 30px;
    padding-right: 30px;
  }

  .breadcrumb .breadcrumb-item a{
    text-decoration: none;
    font-size: 1.3em;
    color: #4b4545;
  }

  .breadcrumb .breadcrumb-item a.active {
    text-decoration: none;
    font-size: 1.3em;
  }
       
  .btn-grad {
    background-image: linear-gradient(to right, #360033 0%, #0b8793  51%, #360033  100%);
    margin: 10px;
    padding: 6px 0px;
    text-align: center;
    text-transform: uppercase;
    transition: 0.5s;
    background-size: 200% auto;
    color: white;            
    box-shadow: 0 0 20px #eee;
    border-radius: 10px;
    display: block;
    width: 90px;
  }

  .btn-grad:hover {
    background-position: right center;
    color: #fff;
    text-decoration: none;
  }

  .btn-edit {
    background: lightgray;
    margin: 10px;
    padding: 6px 0px;
    text-align: center;
    text-transform: uppercase;
    transition: 0.5s;
    background-size: 200% auto;
    color: black;            
    box-shadow: 0 0 20px #eee;
    border-radius: 10px;
    display: block;
    width: 90px;
  }

  .btn-edit:hover {
    background-position: right center;
    color: black;
    text-decoration: none;
  }
         

</style>
<div class="invitation-background d-flex justify-content-center align-items-center">

</div>
<div class="container-fluid m-0">
  <div class="row px-4 pt-4">
    <div class="col-md-9">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href='<% root_path %>'><i class="fa fa-home" style="margin-right: 5px;"></i>Home</a></li>
          <li class="breadcrumb-item active" aria-current="page"><a href='<% invitation_cards_path %>'>E-Invitations</a></li>
        </ol>
      </nav>
    </div>
    <div class="col-md-3 d-flex align-items-center justify-content-end">
      <%= link_to new_invitation_card_path, class:"btn btn-lg px-5", style:"background: #1e396b; color: white;" do %>
        <i class="fa fa-plus" style="margin-right: 5px;"></i>Create
      <% end %>
    </div>
  </div>
</div>

<hr style="color: lightgray;">
<div class="invite-container m-0">
  <div class="row">
    <% @invitation_cards&.each do |invitation_card| %>
      <div class="col-md-3 col-sm-6 d-flex justify-content-center">
        <div class="invite-card card shadow" style="border-radius: 15px;">
          <div class="bg-image hover-overlay ripple ripple-surface ripple-surface-light"
            data-mdb-ripple-color="light" >
              <%= image_tag(invitation_card.image, style:"border-radius: 15px;") %>
          </div>
          <div class="card-body py-2">
          <div class="d-flex">
          <div>
            <%= link_to add_text_invitation_card_path(invitation_card), class:"btn btn-sm btn-grad float-left" do %>
              <i class="fas fa-paint-brush" style="margin-right: 3px;"></i>Customize
            <% end %>
          </div> 


          <div>
             <%= link_to add_text_invitation_card_path(invitation_card), class:"btn btn-sm btn-edit float-left" do %>
              <i class="fas fa-edit" style="margin-right: 3px;"></i>Edit
            <% end %>
          </div>  

          </div>  

          </div>
        </div>  
      </div>
    <% end %>
  </div>
</div>
