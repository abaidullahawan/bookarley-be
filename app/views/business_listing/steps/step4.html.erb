<style>
  .contact-title{
    font-size: 26px;
    font-weight: 500;
    color: #534f4f;
  }

  .contact-para{
    font-size: 14px;
    color: #0d0c0c;
    font-weight: 200;
    position: relative;
  }

  .contact-para:before{
    content: "";
    position: absolute;
    bottom: -52%;
    left: 5%;
    transform: translateX(-50%);
    width: 50px;
    height: 3px;
    background-color: #f1a351;
    border-radius: 3px;
  }

  .contact-para:after{
    content: "";
    position: absolute;
    bottom: -52%;
    left: 5%;
    transform: translateX(30px);
    width: 10px;
    height: 3px;
    background-color: #504f93;
    border-radius: 3px;
  }

  .category-cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  .category-card {
    border: 1px solid #ccc;
    padding: 10px;
    text-align: center;
    cursor: pointer;
    border-radius: 30px;
  }

  .category-card:hover {
    border-color: #374c7f; 
  }

  .category-card.selected {
    border-color: #374c7f; 
  }

  .custom-font {
    font-size: 13px;
    color: #5b5656;
  }

  .back-next-btn{
    padding: 10px 45px;
    font-size: 15px;
    border-radius: 30px;
    
  }

  .btn-next{
    background: #1d3969;
    color: white;
  }

  .btn-next:hover{
    background: white;
    color: black;
    border: 1px solid lightgray;
  }

  .btn-back:hover{
    background: white;
    color: black;
    border: 1px solid lightgray;
  }

  .btn-back{
    background: white;
    color: #374c7f;
    border: 1px solid #374c7f;
  }

  .ctg-name{
    font-size: 12px;
    color: #4b4949;
    margin-left: 6px;
  }
</style>

<div class="container-fluid m-0 h-100" style="background: aliceblue;">
  <div class="card-registration">
    <div class="row g-0">
      <div class="col-xl-6 d-flex justify-content-center align-items-center">
        <%= image_tag("seller_img.png", style:"border-top-left-radius: .25rem; border-bottom-left-radius: .25rem; width: 68%;") %>
      </div>
      <div class="col-xl-6 bg-white">
        <div class="container px-5" style="padding-top: 38px;">
          <h1 class="contact-title">Business Details</h1>
          <p class="contact-para px-2">Your Business at a glance</p>
          <div class="container" style="margin-top: 50px;">
              <%= form_for :product, url: business_listing_process_step4_path do |f| %>
                <div class="row mb-5">
                  <div class="col-lg-12">
                    <div class="form-group">
                        <label for="fullname" class="uppercase text-sm text-gray-600 font-bold custom-font">Business Title *</label>
                        <%= f.text_field :name, class:"form-control custom-font" %>
                    </div>
                  </div>
                </div>
                <div class="row mb-5">
                  <div class="col-lg-12">
                    <div class="form-group">
                        <label for="fullname" class="uppercase text-sm text-gray-600 font-bold custom-font">Type of Business *</label>
                        <%
                          @taxon_by_id = Spree::Taxon&.where("name LIKE ?", "%By Venue Type%").first
                          @taxons_list = Spree::Taxon&.where(parent_id: @taxon_by_id&.id)
                        %>
                        <div class="category-cards">
                          <% @taxons_list.each do |taxonomy| %>
                            <div class="category-card card shadow-sm d-flex pl-5" data-value="<%= taxonomy.name %>">
                              <div class="d-flex align-items-center px-4 py-2">
                                <div>
                                  <% if taxonomy.icon.attached? %>
                                    <%= render(ImageComponent.new(image: taxonomy.icon, size: :small, itemprop: "image", style: "width: 35px;")) %>
                                  <% end %>
                                </div>
                                <div class="d-flex justify-content-center align-items-center ctg-name">
                                  <%= taxonomy.name %>
                                </div>
                              </div>
                            </div>
                          <% end %>
                        </div>
                    </div>
                  </div>
                </div>
                <%= f.hidden_field :sub_category, id: 'sub-category-field' %>
                <div class="row mb-5">
                  <div class="col-lg-6">
                    <div class="form-group">
                        <label for="fullname" class="uppercase text-sm text-gray-600 font-bold custom-font">Down Payment</label>
                        <%= f.text_field :down_payment, class:"form-control custom-font" %>
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="form-group">
                      <label for="fullname" class="uppercase text-sm text-gray-600 font-bold custom-font">Down Payment Type</label>
                      <%= f.select :down_payment_type, ["By Cash", "By Credit"], { prompt: "Select Down Payment Type" }, { class: "form-control custom-font", required: true } %>
                    </div>
                  </div>
                </div>
                <div class="row mb-5">
                  <div class="col-lg-12">
                    <div class="form-group">
                        <label for="fullname" class="uppercase text-sm text-gray-600 font-bold custom-font">Cancellation Policy</label>
                        <%= f.select :cancellation_policy, ["Refundable", "Partially Refundable", "Non Refundable"], { prompt: "Select Cancellation Policy" }, { class: "form-control custom-font", required: true } %>
                    </div>
                  </div>
                </div>
                <div style="display: flex; justify-content: space-between; margin-top: 50px;">
                  <div>
                    <%= link_to "Back", root_path, class:"btn back-next-btn btn-back" %>
                  </div>
                  <div> 
                    <%= f.submit "Next", class:"btn back-next-btn btn-next" %>
                  </div>  
                </div>
              <% end %>
          </div>
        </div>
      </div>  
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('.category-card').click(function() {
      $('.category-card').removeClass('selected');
      $(this).addClass('selected');

      var selectedOption = $(this).data('value');
      $('#sub-category-field').val(selectedOption);
    });
  });
</script>
