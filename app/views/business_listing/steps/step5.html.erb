<script>
  $(document).ready(function() {
    $('.category-card').click(function() {
      $('.category-card').removeClass('selected');

      $(this).addClass('selected');

      var selectedOption = $(this).data('value');
      $('#staff-field').val(selectedOption);
    });
  });

  $(document).ready(function() {
    var selectedCardsModal = [];
    var selectedCardsDisplay = [];

    $(".feature-card").click(function() {
      $(this).toggleClass("selected-card");
    });

    $(document).on("click", ".remove-card", function() {
      var cardIndex = $(this).data("index");
      selectedCardsModal.splice(cardIndex, 1);
      selectedCardsDisplay.splice(cardIndex, 1);

      displaySelectedCards(selectedCardsDisplay);

      $(".modal-body .feature-card").eq(cardIndex).removeClass("selected-card");
    });

    $("#saveIcons").click(function() {
      selectedCardsModal = [];
      $(".selected-card").each(function(index) {
        var iconClass = $(this).find(".feature-icon").attr("class").split(" ")[1];
        var cardTitle = $(this).find(".feature-title").text();
        selectedCardsModal.push({ iconClass: iconClass, cardTitle: cardTitle });
      });

      $("#product_feature_data").val(JSON.stringify(selectedCardsModal));

      $("#iconModal").modal("hide");

      selectedCardsDisplay = selectedCardsModal.slice();
      displaySelectedCards(selectedCardsDisplay);
    });

    function displaySelectedCards(cards) {
      var selectedCardsContainer = $("#selectedCardsContainer");
      selectedCardsContainer.empty();

      cards.forEach(function(card, index) {
        var cardHtml = 
          '<div class="feature-card card shadow-sm d-flex pl-5">' +
          '<div class="d-flex align-items-center px-4 py-2">' +
          '<i class="fas ' + card.iconClass + ' feature-icon"></i>' +
          '<div class="d-flex justify-content-center align-items-center ctg-name">' +
          '<h5 class="feature-title">' + card.cardTitle + '</h5>' +
          '<button type="button" class="close remove-card" data-index="' + index + '" aria-label="Close">' +
          '<span aria-hidden="true">&times;</span>' +
          '</button>' +
          '</div>' +
          '</div>' +
          '</div>';

        selectedCardsContainer.append(cardHtml);
      });
    }
  });
</script>







