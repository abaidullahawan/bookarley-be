<style>
  .contact-title{
    font-size: 26px;
    font-weight: 500;
    color: #534f4f;
  }

  .contact-para{
    font-size: 14px;
    color: #0d0c0c;
    font-weight: 200;
    position: relative;
  }

  .contact-para:before{
    content: "";
    position: absolute;
    bottom: -52%;
    left: 5%;
    transform: translateX(-50%);
    width: 50px;
    height: 3px;
    background-color: #f1a351;
    border-radius: 3px;
  }

  .contact-para:after{
    content: "";
    position: absolute;
    bottom: -52%;
    left: 5%;
    transform: translateX(30px);
    width: 10px;
    height: 3px;
    background-color: #504f93;
    border-radius: 3px;
  }

  .category-cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  .category-card {
    border: 1px solid #ccc;
    padding: 10px;
    text-align: center;
    cursor: pointer;
    border-radius: 30px;
  }

  .category-card:hover {
    border-color: #374c7f; 
  }

  .category-card.selected {
    border-color: #374c7f; 
  }

  .feature-cards {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
  }

  .feature-card {
    border: 1px solid #ccc;
    padding: 10px;
    text-align: center;
    cursor: pointer;
    border-radius: 30px;
  }

  .feature-card:hover {
    border-color: #374c7f; 
  }

  .feature-card.selected {
    border-color: #374c7f; 
  }

  .custom-font {
    font-size: 13px;
    color: #5b5656;
  }

  .back-next-btn{
    padding: 10px 45px;
    font-size: 15px;
    border-radius: 30px;
    
  }

  .btn-next{
    background: #1d3969;
    color: white;
  }

  .btn-next:hover{
    background: white;
    color: black;
    border: 1px solid lightgray;
  }

  .btn-back:hover{
    background: white;
    color: black;
    border: 1px solid lightgray;
  }

  .btn-back{
    background: white;
    color: #374c7f;
    border: 1px solid #374c7f;
  }

  .ctg-name{
    font-size: 12px;
    color: #4b4949;
    margin-left: 6px;
  }

  .male-icon{
    font-size: 25px;
    color: #0d7ae4;
  }

  .female-icon{
    font-size: 25px;
    color: #c35468;
  }

  .non-binary-icon{
    font-size: 25px;
    color: purple;
  }

  .feature-btn{
    background: transparent;
    color: #374c7f;
    border: none;
    font-size: 12px;
  }

  .selected-card {
    border: 1px solid #1e396b; 
    background-color: #f0f0f0; 
    cursor: pointer; 
  }

  .md-close-btn{
    background: none;
    border: none;
    font-size: 20px;
  }

  .feature-card div div i{
    font-size: 15px;
  }

  .feature-title{
    font-size: 12px;
  }

  #selectedCardsContainer{
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  .display-selected-card{
    border: 1px solid #ccc;
    padding: 10px;
    text-align: center;
    cursor: pointer;
    border-radius: 30px;
  }

  .remove-card {
    position: absolute;
    top: 11px;
    right: 10px;
    padding: 0;
    background: none;
    border: none;
    cursor: pointer;
    color: red;
    font-size: 1.7rem;
  }

  .card-registration .form-control {
    display: block;
    width: 100%;
    padding: 0.75rem;
    font-size: 1.3rem;
    line-height: 1.5;
    color: #495057;
    background-color: #fff;
    background-clip: padding-box;
    border: 1px solid #ced4da;
    border-radius: 0.25rem;
    transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
  }
  .card-registration .form-control:focus {
    color: #495057;
    background-color: #fff;
    border-color: #80bdff;
    outline: 0;
    box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
  }

</style>

<div class="container-fluid m-0 h-100" style="background: aliceblue;">
  <div class="card-registration">
    <div class="row g-0">
      <div class="col-xl-6 d-flex justify-content-center align-items-center">
        <%= image_tag("seller_img.png", style:"border-top-left-radius: .25rem; border-bottom-left-radius: .25rem; width: 68%;") %>
      </div>
      <div class="col-xl-6 bg-white">
        <div class="container px-5" style="padding-top: 38px;">
          <h1 class="contact-title">Package Details</h1>
          <p class="contact-para px-2">Describe your best product here</p>
          <div class="container" style="margin-top: 50px;">
              <%= form_for :product, url: business_listing_process_step5_path do |f| %>
                <div id="additionalPackagesContainer">
                  <div class="row mb-5">
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label for="fullname" class="uppercase text-sm text-gray-600 font-bold custom-font">Package Title *</label>
                        <%= f.text_field :package_title, class: "form-control custom-font", required: true %>
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label for="fullname" class="uppercase text-sm text-gray-600 font-bold custom-font">Package Price *</label>
                        <%= f.number_field :package_price, class: "form-control custom-font", required: true %>
                      </div>
                    </div>
                  </div>
                  <div class="row mb-5" id="extraFieldsContainer">
                    <% @extra_fields.each_with_index do |ef, i| %>
                      <div class="col-lg-6 mt-3">
                        <div class="form-group">
                          <label for="<%= "extra_field_#{i}" %>" class="uppercase text-sm text-gray-600 font-bold custom-font"><%= ef.name %></label>
                          <%= text_field_tag "extra_fields[][name]", ef.name, class: "form-control custom-font d-none" %>
                          <%= text_field_tag "extra_fields[][id]", ef.id, class: "form-control custom-font d-none" %>
                          <%= text_field_tag "extra_fields[][value]", nil, class: "form-control custom-font", id: "extra_field_#{i}", required: true %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
                <div class="field">
                  <%= f.label :images, "Select images:" %>
                  <%= f.file_field :images, accept: "image/*", multiple: true, required: true %>
                </div>
                <div style="display: flex; justify-content: space-between; margin-top: 100px;">
                  <div>
                    <%= link_to "Back", business_listing_step4_path(back: true), class:"btn back-next-btn btn-back" %>
                  </div>
                  <div>
                    <%= f.submit "Create", class:"btn back-next-btn btn-next" %>
                  </div>
                </div>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('.category-card').click(function() {
      $('.category-card').removeClass('selected');

      $(this).addClass('selected');

      var selectedOption = $(this).data('value');
      $('#staff-field').val(selectedOption);
    });
  });

  $(document).ready(function() {
    var selectedCardsModal = [];
    var selectedCardsDisplay = [];

    $(".feature-card").click(function() {
      $(this).toggleClass("selected-card");
    });

    $(document).on("click", ".remove-card", function() {
      var cardIndex = $(this).data("index");
      selectedCardsModal.splice(cardIndex, 1);
      selectedCardsDisplay.splice(cardIndex, 1);

      displaySelectedCards(selectedCardsDisplay);

      $(".modal-body .feature-card").eq(cardIndex).removeClass("selected-card");
    });

    $("#saveIcons").click(function() {
      selectedCardsModal = [];
      $(".selected-card").each(function(index) {
        var iconClass = $(this).find(".feature-icon").attr("class").split(" ")[1];
        var cardTitle = $(this).find(".feature-title").text();
        selectedCardsModal.push({ iconClass: iconClass, cardTitle: cardTitle });
      });

      $("#product_feature_data").val(JSON.stringify(selectedCardsModal));

      $("#iconModal").modal("hide");

      selectedCardsDisplay = selectedCardsModal.slice();
      displaySelectedCards(selectedCardsDisplay);
    });

    function displaySelectedCards(cards) {
      var selectedCardsContainer = $("#selectedCardsContainer");
      selectedCardsContainer.empty();

      cards.forEach(function(card, index) {
        var cardHtml = 
          '<div class="feature-card card shadow-sm d-flex pl-5">' +
          '<div class="d-flex align-items-center px-4 py-2">' +
          '<i class="fas ' + card.iconClass + ' feature-icon"></i>' +
          '<div class="d-flex justify-content-center align-items-center ctg-name">' +
          '<h5 class="feature-title">' + card.cardTitle + '</h5>' +
          '<button type="button" class="close remove-card" data-index="' + index + '" aria-label="Close">' +
          '<span aria-hidden="true">&times;</span>' +
          '</button>' +
          '</div>' +
          '</div>' +
          '</div>';

        selectedCardsContainer.append(cardHtml);
      });
    }
  });
</script>
