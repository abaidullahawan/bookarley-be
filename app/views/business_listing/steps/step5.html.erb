<style>
  .contact-title{
    font-size: 26px;
    font-weight: 500;
    color: #534f4f;
  }

  .contact-para{
    font-size: 14px;
    color: #0d0c0c;
    font-weight: 200;
    position: relative;
  }

  .contact-para:before{
    content: "";
    position: absolute;
    bottom: -52%;
    left: 5%;
    transform: translateX(-50%);
    width: 50px;
    height: 3px;
    background-color: #f1a351;
    border-radius: 3px;
  }

  .contact-para:after{
    content: "";
    position: absolute;
    bottom: -52%;
    left: 5%;
    transform: translateX(30px);
    width: 10px;
    height: 3px;
    background-color: #504f93;
    border-radius: 3px;
  }

  .category-cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  .category-card {
    border: 1px solid #ccc;
    padding: 10px;
    text-align: center;
    cursor: pointer;
    border-radius: 30px;
  }

  .category-card:hover {
    border-color: #374c7f; 
  }

  .category-card.selected {
    border-color: #374c7f; 
  }

  .feature-cards {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
  }

  .feature-card {
    border: 1px solid #ccc;
    padding: 10px;
    text-align: center;
    cursor: pointer;
    border-radius: 30px;
  }

  .feature-card:hover {
    border-color: #374c7f; 
  }

  .feature-card.selected {
    border-color: #374c7f; 
  }

  .custom-font {
    font-size: 13px;
    color: #5b5656;
  }

  .back-next-btn{
    padding: 10px 45px;
    font-size: 15px;
    border-radius: 30px;
    
  }

  .btn-next{
    background: #1d3969;
    color: white;
  }

  .btn-next:hover{
    background: white;
    color: black;
    border: 1px solid lightgray;
  }

  .btn-back:hover{
    background: white;
    color: black;
    border: 1px solid lightgray;
  }

  .btn-back{
    background: white;
    color: #374c7f;
    border: 1px solid #374c7f;
  }

  .ctg-name{
    font-size: 12px;
    color: #4b4949;
    margin-left: 6px;
  }

  .male-icon{
    font-size: 25px;
    color: #0d7ae4;
  }

  .female-icon{
    font-size: 25px;
    color: #c35468;
  }

  .non-binary-icon{
    font-size: 25px;
    color: purple;
  }

  .feature-btn{
    background: transparent;
    color: #374c7f;
    border: none;
    font-size: 12px;
  }

  .selected-card {
    border: 1px solid #1e396b; 
    background-color: #f0f0f0; 
    cursor: pointer; 
  }

  .md-close-btn{
    background: none;
    border: none;
    font-size: 20px;
  }

  .feature-card div div i{
    font-size: 15px;
  }

  .feature-title{
    font-size: 12px;
  }

  #selectedCardsContainer{
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  .display-selected-card{
    border: 1px solid #ccc;
    padding: 10px;
    text-align: center;
    cursor: pointer;
    border-radius: 30px;
  }

  .remove-card {
    position: absolute;
    top: 11px;
    right: 10px;
    padding: 0;
    background: none;
    border: none;
    cursor: pointer;
    color: red;
    font-size: 1.7rem;
  }

</style>

