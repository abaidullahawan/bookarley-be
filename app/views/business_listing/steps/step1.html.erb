<style>
  .form_logo img{
    height: auto;
    width: 80px;
    line-height: 100px;
  }

  .category-cards {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }

  .category-card {
    border: 1px solid #ccc;
    padding: 10px;
    text-align: center;
    cursor: pointer;
    border-radius: 30px;
  }

  .category-card:hover {
    border-color: #374c7f; 
  }

  .category-card.selected {
    border-color: #374c7f; 
  }

  .step1-heading{
    font-weight: 200;
    font-size: 32px;
    color: gray;
  }

  .step1-margin{
    padding-top: 10rem;
    padding-bottom: 6rem;
  }

  .back-next-btn{
    padding: 10px 45px;
    font-size: 15px;
    border-radius: 30px;
    
  }

  .btn-next{
    background: #1d3969;
    color: white;
  }

  .btn-next:hover{
    background: white;
    color: black;
    border: 1px solid lightgray;
  }

  .btn-back:hover{
    background: white;
    color: black;
    border: 1px solid lightgray;
  }

  .btn-back{
    background: white;
    color: #374c7f;
    border: 1px solid #374c7f;
  }

  .ctg-name{
    font-size: 12px;
    color: #4b4949;
    margin-left: 10px;
  }

  .error-text{
    margin-left: 40px;
    color: red;
    font-size: 15px;
  }
</style>
<div class="container-fluid m-0 h-100" style="background: aliceblue;">
  <div class="card-registration">
    <div class="row g-0">
      <div class="col-xl-6 d-flex justify-content-center align-items-center">
        <%= image_tag("seller_img.png", style:"border-top-left-radius: .25rem; border-bottom-left-radius: .25rem; width: 68%;") %>
      </div>
      <div class="col-xl-6 bg-white">
        <div class="step1-margin">
          <div class="form_logo text-center pb-4">
            <%= image_tag("bookarley-logo.png", alt:"logo") %>
          </div>
          <h1 class="step1-heading text-center">Choose Your Interest</h1>
        </div>
        <%
          @taxonomies = Spree::Taxonomy.where("name LIKE ?", "%Venues%")
                .or(Spree::Taxonomy.where("name LIKE ?", "%Vendors%"))
                .or(Spree::Taxonomy.where("name LIKE ?", "%Party Suppliers%"))
                .or(Spree::Taxonomy.where("name LIKE ?", "%Online Shopping%"))
                .or(Spree::Taxonomy.where("name LIKE ?", "%E-Invitations%"))
        %>
        <%= form_for :product, url: business_listing_process_step1_path do |f| %>
          <p class='error-text d-none'>Please a category first.</p>
          <div class="category-cards px-5">
            <% @taxonomies.each do |taxonomy| %>
              <div class="category-card card shadow d-flex pl-5" data-value="<%= taxonomy.id %>">
                <div class="d-flex align-items-center px-4 py-2">
                  <div>
                    <% if taxonomy.icon.attached? %>
                      <%= render(ImageComponent.new(image: taxonomy.icon, size: :small, itemprop: "image", style: "width: 35px;")) %>
                    <% end %>
                  </div>
                  <div class="d-flex justify-content-center align-items-center ctg-name">
                    <%= taxonomy.name %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          <%= f.hidden_field :category_id, id: 'category-field' %>
          <div  class="px-5" style="display: flex; justify-content: space-between; margin-top: 100px;">
            <div>
              <%= link_to "Back", root_path, class:"btn back-next-btn btn-back" %>
            </div>
            <div>
              <%= f.button "Next", type: 'button', class:"btn back-next-btn btn-next" , id: 'next-btn' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('.category-card').click(function() {
      $('.category-card').removeClass('selected');
      $(this).addClass('selected');
      var selectedOption = $(this).data('value');
      $('#category-field').val(selectedOption);
      $('.error-text').addClass('d-none')
    });

    $('#next-btn').on('click', function(event){
      if ($('#category-field').val().length < 1){
        $('.error-text').removeClass('d-none')
      }else{
        $(this).closest('form').submit()
      }
    })
  });
</script>
