<style>
  .contact-title{
    font-size: 26px;
    font-weight: 500;
    color: #534f4f;
  }

  .contact-para{
    font-size: 14px;
    color: #0d0c0c;
    font-weight: 200;
    position: relative;
  }

  .contact-para:before{
    content: "";
    position: absolute;
    bottom: -52%;
    left: 5%;
    transform: translateX(-50%);
    width: 50px;
    height: 3px;
    background-color: #f1a351;
    border-radius: 3px;
  }

  .contact-para:after{
    content: "";
    position: absolute;
    bottom: -52%;
    left: 5%;
    transform: translateX(30px);
    width: 10px;
    height: 3px;
    background-color: #504f93;
    border-radius: 3px;
  }

  .custom-font {
    font-size: 13px;
    color: #5b5656;
  }

  .back-next-btn{
    padding: 10px 45px;
    font-size: 15px;
    border-radius: 30px;
    
  }

  .btn-next{
    background: #1d3969;
    color: white;
  }

  .btn-next:hover{
    background: white;
    color: black;
    border: 1px solid lightgray;
  }

  .btn-back:hover{
    background: white;
    color: black;
    border: 1px solid lightgray;
  }

  .btn-back{
    background: white;
    color: #374c7f;
    border: 1px solid #374c7f;
  }

  .social-field{
    border: none;
    border-bottom: 1px solid #dee2e6;
    border-radius: 0;
  }

  .fb-icon{
    color: blue;
    font-size: 18px;
  }

  .insta-icon{
    color: purple;
    font-size: 18px;
  }
  .card-registration .form-control {
    display: block;
    width: 100%;
    padding: 0.75rem;
    font-size: 1.3rem;
    line-height: 1.5;
    color: #495057;
    background-color: #fff;
    background-clip: padding-box;
    border: 1px solid #ced4da;
    border-radius: 0.25rem;
    transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
  }
  .card-registration .form-control:focus {
    color: #495057;
    background-color: #fff;
    border-color: #80bdff;
    outline: 0;
    box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
  }
</style>

<div class="container-fluid m-0 h-100" style="background: aliceblue;">
  <div class="card-registration">
    <div class="row g-0">
      <div class="col-xl-6 d-flex justify-content-center align-items-center">
        <%= image_tag("seller_img.png", style:"border-top-left-radius: .25rem; border-bottom-left-radius: .25rem; width: 68%;") %>
      </div>
      <div class="col-xl-6 bg-white">
        <div class="container px-5" style="padding-top: 38px;">
          <h1 class="contact-title">Contact Details</h1>
          <p class="contact-para px-2">Stay in touch with ease</p>
          <div class="container" style="margin-top: 50px;">
              <%= form_for :business, url: business_listing_process_step3_path do |f| %>
                <div class="row mb-5">
                  <div class="col-lg-6">
                    <div class="form-group">
                      <label for="fullname" class="uppercase text-sm text-gray-600 font-bold custom-font">Full Name *</label>
                      <%= f.text_field :owner_name, value: session[:business_owner_name], class:"form-control custom-font", required: true %>
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="form-group">
                        <label for="fullname" class="uppercase text-sm text-gray-600 font-bold custom-font">City *</label>
                        <%= f.select :city, options_for_select(["Karachi", "Lahore", "Islamabad", "Rawalpindi", "Faisalabad"], session[:business_city]), { prompt: "Select a City" }, { class: "form-control custom-font", required: true } %>
                    </div>
                  </div>
                </div>
                <div class="row mb-5">
                  <div class="col-lg-6">
                    <div class="form-group">
                      <label for="fullname" class="uppercase text-sm text-gray-600 font-bold custom-font">Email *</label>
                      <%= f.text_field :email, value: session[:business_email], class:"form-control custom-font", required: true %>
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="form-group">
                      <label for="fullname" class="uppercase text-sm text-gray-600 font-bold custom-font">Phone *</label>
                      <%= f.text_field :phone, value: session[:business_phone], class:"form-control custom-font", required: true %>
                    </div>
                  </div>
                </div>
                <div class="row mb-5">
                  <div class="col-lg-12">
                    <div class="form-group">
                      <label for="fullname" class="uppercase text-sm text-gray-600 font-bold custom-font">Store Name *</label>
                      <%= f.text_field :brand_name, value: session[:business_brand_name], class:"form-control custom-font", required: true %>
                    </div>
                  </div>
                </div>
                <div style="display: flex; justify-content: space-between; margin-top: 50px;">
                  <div>
                    <% if spree_current_user.present? %>
                      <%= link_to "Back", business_listing_step1_path(back: true), class:"btn back-next-btn btn-back" %>
                    <% else %>
                      <%= link_to "Back", business_listing_step2_path(back: true), class:"btn back-next-btn btn-back" %>
                    <% end %>
                  </div>
                  <div>
                    <%= f.submit "Next", class:"btn back-next-btn btn-next" %>
                  </div>
                </div>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
