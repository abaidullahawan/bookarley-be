<li class="product-card card shadow w-100 my-2">
  <article>
    <section class="product-card_image position-relative">
      <%= link_to product_path(product), itemprop: 'url' do %>
        <%= render(ImageComponent.new(image: main_image, size: :small, itemprop: "image", class: "card-img-top")) %>
      <% end %>
      <a href="#!" class="btn btn-light border icon-hover px-2 pt-2 m-2 position-absolute top-0 end-0"><i class="fas fa-heart fa-lg text-secondary px-1"></i></a>
    </section>
    <header class="product-card_header card-body d-flex flex-column">
      <h5 class="card-title">
        <%= link_to truncate(product.name, length: 50), product_path(product), class: 'info text-dark', itemprop: "name", style:"text-decoration: none;", title: product.name %>
      </h5>
    </header>
    <section class="product-card_price card-footer align-items-end p-3 mt-auto" itemprop="offers" itemscope itemtype="http://schema.org/Offer">
      <% if display_price %>
        <div class="price selling" itemprop="price" content="<%= display_price.to_d %>">
          <%= display_price.to_html %>
        </div>
        <div itemprop="priceCurrency" content="<%= display_price.currency %>"></div>
      <% end %>
      <a href="#!" class="btn btn-primary shadow-none mr-1 mt-3 px-5"><i class="fas fa-shopping-cart text-light px-2"></i>Add to cart</a>
    </section>
  </article>
</li>
